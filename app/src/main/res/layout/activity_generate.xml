<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".GenerateActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />


    <TextView
        android:id="@+id/generatestring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:hint="@string/press_the_button_to_show_generated_key"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="22sp" />


    <Button
        android:id="@+id/key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/generatestring"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/darkblue"
        android:padding="16dp"
        android:text="@string/generate_key"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />


    <include
        android:id="@+id/banner_ad"
        layout="@layout/activity_android_banner" />


</RelativeLayout>