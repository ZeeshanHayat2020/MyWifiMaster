    <FrameLayout
        android:id="@+id/acPassGenerator_bannerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_2sdp" />

</RelativeLayout>