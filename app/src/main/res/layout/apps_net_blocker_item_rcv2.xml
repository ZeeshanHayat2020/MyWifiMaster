<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_3sdp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivIcon2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:contentDescription="@null"
            android:src="@drawable/ic_launcher_background"
            android:transitionName="profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Wi-fi Master"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPackage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="com.example.wifiMaster"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="right"
                android:orientation="horizontal"
                android:weightSum="2">

                <ToggleButton
                    android:id="@+id/cbWifi2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/backgorund_selector_wifi"
                    android:clickable="true"
                    android:focusable="true"
                    android:textOff=""
                    android:textOn="" />


                <ToggleButton
                    android:id="@+id/cbOther2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:background="@drawable/other"
                    android:textOff=""
                    android:textOn=""

                    />

                <!--           <CheckBox
                               android:id="@+id/cbWifiState"
                               android:layout_width="@dimen/_30sdp"
                               android:layout_height="@dimen/_30sdp"
                               android:layout_gravity="center_vertical"
                               android:layout_marginStart="@dimen/_30sdp"
                               android:layout_marginEnd="@dimen/_30sdp"
                               android:button="@drawable/backgorund_selector_wifi"

                               />

                           <CheckBox
                               android:id="@+id/cbOther2"
                               android:layout_width="@dimen/_30sdp"
                               android:layout_height="@dimen/_30sdp"
                               android:layout_gravity="center_vertical"
                               android:layout_marginStart="@dimen/_30sdp"
                               android:layout_marginEnd="@dimen/_30sdp"
                               android:button="@drawable/other" />-->

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>